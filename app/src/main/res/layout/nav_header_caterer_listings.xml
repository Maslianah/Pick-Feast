<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Filter"
            android:padding="10dp"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/halal"
            android:layoutDirection="rtl"
            android:text="Non Halal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_margin="5dp"
            android:text="Style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_room_service_black_24dp"
            android:drawablePadding="10dp"
            android:padding="5dp"/>


        <CheckBox
            android:id="@+id/banquet"
            android:layoutDirection="rtl"
            android:text="Banquet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/buffet"
            android:layoutDirection="rtl"
            android:text="Buffet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/livestation"
            android:layoutDirection="rtl"
            android:text="Live Station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/packed"
            android:layoutDirection="rtl"
            android:text="Packed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/dome"
            android:layoutDirection="rtl"
            android:text="Dome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:text="Cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_restaurant"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>


        <CheckBox
            android:id="@+id/malay"
            android:layoutDirection="rtl"
            android:text="Malay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/chinese"
            android:layoutDirection="rtl"
            android:text="Chinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/indian"
            android:layoutDirection="rtl"
            android:text="Indian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/western"
            android:layoutDirection="rtl"
            android:text="Western"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/others"
            android:layoutDirection="rtl"
            android:text="Others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:text="Ocassions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_people"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_margin="5dp"/>


        <CheckBox
            android:id="@+id/meeting"
            android:layoutDirection="rtl"
            android:text="Meeting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/party"
            android:layoutDirection="rtl"
            android:text="Party"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/wedding"
            android:layoutDirection="rtl"
            android:text="Wedding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/openhouse"
            android:layoutDirection="rtl"
            android:text="Open House"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <CheckBox
            android:id="@+id/privatevent"
            android:layoutDirection="rtl"
            android:text="Private Event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <Button
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:onClick="checkFilter"/>
    </LinearLayout>

</LinearLayout>
